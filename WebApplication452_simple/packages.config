<?xml version="1.0" encoding="utf-8"?>
<packages>
  <!-- Removed deprecated .NET Framework packages and replaced with latest and compatible .NET 8 dependencies -->
  <!-- Modernized EntityFramework to EntityFrameworkCore -->
  <package id="Microsoft.EntityFrameworkCore" version="8.0.0" targetFramework="net8.0" />
  <package id="Microsoft.EntityFrameworkCore.SqlServer" version="8.0.0" targetFramework="net8.0" />

  <!-- Upgraded Microsoft.AspNet.Mvc to ASP.NET Core MVC -->
  <package id="Microsoft.AspNetCore.Mvc" version="8.0.0" targetFramework="net8.0" />

  <!-- Modernized and updated other dependencies to the latest secure versions -->
  <package id="bootstrap" version="5.3.1" targetFramework="net8.0" />
  <package id="jQuery" version="3.7.1" targetFramework="net8.0" />
  <package id="jQuery.Validation" version="1.20.0" targetFramework="net8.0" />
  <package id="Microsoft.AspNetCore.Razor" version="8.0.0" targetFramework="net8.0" />
  <package id="Microsoft.AspNetCore.WebUtilities" version="8.0.0" targetFramework="net8.0" />
  <package id="Microsoft.AspNetCore.WebPages" version="8.0.0" targetFramework="net8.0" />

  <!-- Removed Microsoft.Web.Infrastructure as it is no longer relevant in .NET 8 -->
  <!-- Added secure Newtonsoft.Json version -->
  <package id="Newtonsoft.Json" version="13.0.4" targetFramework="net8.0" />

  <!-- Modernized Modernizr -->
  <package id="modernizr" version="3.12.0" targetFramework="net8.0" />

</packages>