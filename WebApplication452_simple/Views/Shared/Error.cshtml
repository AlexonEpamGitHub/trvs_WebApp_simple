<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <div class="error-page">
        <header>
            <h1>Error</h1>
        </header>
        <section>
            <h2>An error occurred while processing your request.</h2>
            @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
            {
                <p>@Model.ErrorMessage</p>
            }
        </section>
    </div>
</body>
</html>