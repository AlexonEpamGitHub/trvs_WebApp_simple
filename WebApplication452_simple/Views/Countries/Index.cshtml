@model IEnumerable<WebApplication452_simple.Models.Country>

@{
    ViewBag.Title = "Country List";
}

<h2>Country List</h2>

<p>
    <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Create")'">Create New</button>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <button class="btn btn-success" onclick="window.location.href='@Url.Action("Edit", new { id = item.Id })'">Edit</button>
                <button class="btn btn-info" onclick="window.location.href='@Url.Action("Details", new { id = item.Id })'">Details</button>
                <button class="btn btn-danger" onclick="window.location.href='@Url.Action("Delete", new { id = item.Id })'">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll("button");
        buttons.forEach(button => {
            button.style.marginRight = "5px";
        });
    });
</script>