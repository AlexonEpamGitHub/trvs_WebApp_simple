@{
    ViewBag.Title = "About Us";
    ViewBag.Mission = "Our mission is to empower communities through innovation and sustainability.";
    ViewBag.Vision = "Our vision is to create a world where technology drives positive change and enriches lives.";
}
<main aria-labelledby="title" class="about-us-section">
    <header class="about-header">
        <h1 id="title">@ViewBag.Title</h1>
        <p class="subtitle">@ViewBag.Message</p>
    </header>
    
    <section class="mission-vision">
        <div class="mission">
            <h2>Mission</h2>
            <p>@ViewBag.Mission</p>
        </div>
        <div class="vision">
            <h2>Vision</h2>
            <p>@ViewBag.Vision</p>
        </div>
    </section>

    <section class="additional-info">
        <h3>About Our Organization</h3>
        <p>We are dedicated to making a difference by leveraging technology to address global challenges. Our team is committed to fostering innovation and driving sustainable initiatives that benefit society and the environment.</p>
    </section>
</main>