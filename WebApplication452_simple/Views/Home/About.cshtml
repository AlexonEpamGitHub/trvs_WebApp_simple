@{
    ViewBag.Title = "About Us";
    ViewBag.Mission = "Our mission is to empower communities through innovation and sustainability.";
    ViewBag.Vision = "Our vision is to create a world where technology drives positive change and enriches lives.";
}
<main aria-labelledby="title" class="about-us-section">
    <header class="about-header" style="font-family: 'Roboto', sans-serif; text-align: center; background-color: #f8f9fa; padding: 20px;">
        <h1 id="title" style="color: #343a40; font-size: 2.5em; margin-bottom: 10px;">@ViewBag.Title</h1>
        <p class="subtitle" style="color: #6c757d; font-size: 1.25em; margin-top: 0;">@ViewBag.Message</p>
    </header>
    
    <section class="mission-vision" style="display: flex; justify-content: space-around; padding: 20px; background-color: #ffffff;">
        <div class="mission" style="flex: 1; margin-right: 10px; border-right: 1px solid #dee2e6; padding-right: 20px;">
            <h2 style="color: #343a40; font-size: 2em; font-family: 'Roboto', sans-serif;">Mission</h2>
            <p style="color: #6c757d; font-size: 1em; line-height: 1.6;">@ViewBag.Mission</p>
        </div>
        <div class="vision" style="flex: 1; margin-left: 10px; padding-left: 20px;">
            <h2 style="color: #343a40; font-size: 2em; font-family: 'Roboto', sans-serif;">Vision</h2>
            <p style="color: #6c757d; font-size: 1em; line-height: 1.6;">@ViewBag.Vision</p>
        </div>
    </section>

    <section class="additional-info" style="background-color: #f8f9fa; padding: 20px;">
        <h3 style="color: #343a40; font-size: 1.75em; font-family: 'Roboto', sans-serif; margin-bottom: 15px;">About Our Organization</h3>
        <p style="color: #6c757d; font-size: 1em; line-height: 1.6;">We are dedicated to making a difference by leveraging technology to address global challenges. Our team is committed to fostering innovation and driving sustainable initiatives that benefit society and the environment.</p>
    </section>
</main>