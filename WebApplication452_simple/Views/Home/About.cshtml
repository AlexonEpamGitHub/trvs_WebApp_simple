@{
    ViewBag.Title = "About";
}
<main aria-labelledby="page-title">
    <section class="about-section" role="region">
        <header>
            <h1 id="page-title" class="about-title">@ViewBag.Title</h1>
            <h2 class="about-subtitle">@ViewBag.Message</h2>
        </header>
        <article class="about-content">
            <p class="about-description">Use this area to provide additional information about the page or its purpose.</p>
        </article>
    </section>
</main>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        line-height: 1.6;
    }

    .about-section {
        padding: 20px;
        max-width: 1200px;
        margin: auto;
    }

    .about-title {
        font-size: 2rem;
        color: #333;
        margin-bottom: 10px;
    }

    .about-subtitle {
        font-size: 1.5rem;
        color: #555;
        margin-bottom: 20px;
    }

    .about-description {
        font-size: 1rem;
        color: #666;
    }

    @media (max-width: 768px) {
        .about-title {
            font-size: 1.5rem;
        }

        .about-subtitle {
            font-size: 1.25rem;
        }

        .about-description {
            font-size: 0.9rem;
        }
    }
</style>