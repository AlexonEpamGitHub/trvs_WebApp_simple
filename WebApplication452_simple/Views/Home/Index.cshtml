@model HomePageViewModel

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">@Model.Title</h1>
        <p class="lead">@Model.Description</p>
        <p><a asp-controller="Home" asp-action="LearnMore" asp-route-url="https://asp.net" class="btn btn-primary btn-md">Learn more &raquo;</a></p>
    </section>

    <div class="row">
        <section class="col-md-4" aria-labelledby="gettingStartedTitle">
            <h2 id="gettingStartedTitle">Getting started</h2>
            <p>
                @Model.GettingStartedDescription
            </p>
            <p><a asp-controller="Home" asp-action="LearnMore" asp-route-url="https://go.microsoft.com/fwlink/?LinkId=301865" class="btn btn-outline-dark">Learn more &raquo;</a></p>
        </section>
        <section class="col-md-4" aria-labelledby="librariesTitle">
            <h2 id="librariesTitle">Get more libraries</h2>
            <p>@Model.LibrariesDescription</p>
            <p><a asp-controller="Home" asp-action="LearnMore" asp-route-url="https://go.microsoft.com/fwlink/?LinkId=301866" class="btn btn-outline-dark">Learn more &raquo;</a></p>
        </section>
        <section class="col-md-4" aria-labelledby="hostingTitle">
            <h2 id="hostingTitle">Web Hosting</h2>
            <p>@Model.HostingDescription</p>
            <p><a asp-controller="Home" asp-action="LearnMore" asp-route-url="https://go.microsoft.com/fwlink/?LinkId=301867" class="btn btn-outline-dark">Learn more &raquo;</a></p>
        </section>
    </div>
</main>