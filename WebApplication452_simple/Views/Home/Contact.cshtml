@{
    ViewBag.Title = "Contact Us";
}
<main aria-labelledby="title" class="contact-us-container">
    <h2 id="title">@ViewBag.Title</h2>
    <p>Please fill out the form below to get in touch with us:</p>

    <form asp-action="SubmitContactForm" method="post" class="contact-form">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" class="form-control" required minlength="2" maxlength="100" placeholder="Enter your name" />
            <span class="validation-error" asp-validation-for="name"></span>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required placeholder="Enter your email address" />
            <span class="validation-error" asp-validation-for="email"></span>
        </div>

        <div class="form-group">
            <label for="message">Message:</label>
            <textarea id="message" name="message" class="form-control" required minlength="10" maxlength="500" placeholder="Enter your message"></textarea>
            <span class="validation-error" asp-validation-for="message"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <div class="contact-info">
        <h3>Contact Information</h3>
        <address>
            One Microsoft Way<br />
            Redmond, WA 98052-6399<br />
            <abbr title="Phone">P:</abbr>
            425.555.0100
        </address>

        <address>
            <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
            <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
        </address>
    </div>
</main>

<style>
    .contact-us-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    .contact-form {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn {
        padding: 10px 20px;
        background-color: #0078D7;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #005A9E;
    }

    .validation-error {
        color: red;
        font-size: 0.9em;
    }

    .contact-info {
        margin-top: 20px;
    }

    @media (max-width: 768px) {
        .contact-us-container {
            padding: 10px;
        }

        .btn {
            width: 100%;
        }
    }
</style>