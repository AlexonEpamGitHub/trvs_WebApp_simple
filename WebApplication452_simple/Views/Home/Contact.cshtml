@page
@model ContactModel
@{
    ViewData["Title"] = Model.Title;
}
<main aria-labelledby="title">
    <h2 id="title">Contact</h2>
    <h3>@Model.Message</h3>

    <address>
        One Microsoft Way<br />
        Redmond, WA 98052-6399<br />
        <abbr title="Phone">P:</abbr>
        425.555.0100
    </address>

    <address>
        <strong>Support:</strong> <a asp-page="/Contact" asp-route-email="Support@example.com">Support@example.com</a><br />
        <strong>Marketing:</strong> <a asp-page="/Contact" asp-route-email="Marketing@example.com">Marketing@example.com</a>
    </address>
</main>

@code {
    public class ContactModel : PageModel
    {
        public string Title { get; set; }
        public string Message { get; set; }

        public void OnGet()
        {
            Title = "Contact";
            Message = "Your contact page.";
        }
    }
}
