@{
    ViewBag.Title = "Contact";
}
<main aria-labelledby="page-title">
    <h1 id="page-title" class="visually-hidden">@ViewBag.Title</h1>
    
    <section aria-labelledby="contact-details">
        <h2 id="contact-details">Contact Details</h2>
        <p>If you have any questions, feel free to reach out to us through the following contact information:</p>
        
        <address>
            <p>
                <strong>Address:</strong><br />
                One Microsoft Way<br />
                Redmond, WA 98052-6399
            </p>
            <p>
                <strong>Phone:</strong> <a href="tel:+14255550100">425-555-0100</a>
            </p>
        </address>
    </section>
    
    <section aria-labelledby="email-contacts">
        <h2 id="email-contacts">Email Contacts</h2>
        <ul>
            <li>
                <strong>Support:</strong> 
                <span class="email-obfuscated" data-user="Support" data-domain="example.com"></span>
            </li>
            <li>
                <strong>Marketing:</strong> 
                <span class="email-obfuscated" data-user="Marketing" data-domain="example.com"></span>
            </li>
        </ul>
    </section>
</main>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const obfuscatedEmails = document.querySelectorAll('.email-obfuscated');
        obfuscatedEmails.forEach(function(element) {
            const user = element.getAttribute('data-user');
            const domain = element.getAttribute('data-domain');
            const email = `${user}@${domain}`;
            const emailLink = document.createElement('a');
            emailLink.href = `mailto:${email}`;
            emailLink.textContent = email;
            element.appendChild(emailLink);
        });
    });
</script>