{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AppSettings": {
    "WebpagesEnabled": false
  },
  "AllowedHosts": "*"
}

<!DOCTYPE html>
<configuration>
  <configSections>
    <!-- Removed configSections as it is no longer necessary in ASP.NET Core -->
  </configSections>

  <!-- Removed system.web.webPages.razor as it is obsolete and replaced by Razor Pages in ASP.NET Core -->

  <appSettings>
    <!-- Remove legacy appSettings block and move values to appsettings.json -->
  </appSettings>

  <system.webServer>
    <handlers>
      <!-- Removed system.web.mvc specific handler configuration as it is no longer needed in ASP.NET Core -->
    </handlers>
  </system.webServer>

  <system.web>
    <compilation debug="true">
      <!-- Removed assemblies registration as ASP.NET Core handles this differently -->
    </compilation>
  </system.web>
</configuration>