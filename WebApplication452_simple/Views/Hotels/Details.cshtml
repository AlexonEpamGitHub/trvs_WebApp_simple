@model WebApplication452_simple.Models.Hotel

@{
    ViewData["Title"] = "Details";
}

<h2>Hotel Details</h2>

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">@Html.DisplayFor(model => model.Name)</h4>
        <small class="text-muted">Located in @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.Country.Name)</small>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <strong>Stars:</strong> @Html.DisplayFor(model => model.Stars)
            </li>
            <li class="list-group-item">
                <strong>Price Per Night:</strong> @Html.DisplayFor(model => model.PricePerNight) $
            </li>
            <li class="list-group-item">
                <strong>All Inclusive:</strong> @Html.DisplayFor(model => model.IsAllInclusive)
            </li>
        </ul>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>