@model WebApplication452_simple.Models.Hotel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Hotel</h2>

<form asp-action="Edit" method="post">
    <div class="form-horizontal">
        <h4>Hotel</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3 row">
            <label asp-for="Name" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="CountryId" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="CountryId" asp-items="ViewBag.Countries" class="form-control"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="City" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Stars" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Stars" class="form-control" />
                <span asp-validation-for="Stars" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="PricePerNight" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="PricePerNight" class="form-control" />
                <span asp-validation-for="PricePerNight" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="IsAllInclusive" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <div class="form-check">
                    <input asp-for="IsAllInclusive" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="IsAllInclusive" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}