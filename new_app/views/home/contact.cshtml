@{
    ViewData["Title"] = "Contact";
}

<div class="container mt-5">
    <h1 class="display-4 text-center">Contact Us</h1>
    <p class="lead text-center">Have any questions or suggestions? Feel free to reach out to us using the form below or other contact options provided.</p>

    <div class="row mt-4">
        <div class="col-md-8">
            <form asp-controller="Home" asp-action="Contact" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>

                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" class="form-control" id="subject" name="subject">
                </div>

                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-100">Send Message</button>
            </form>
        </div>

        <div class="col-md-4">
            <h5>Contact Information</h5>
            <p>
                <strong>Address:</strong> 123 Main Street, Example City, EX 12345<br>
                <strong>Phone:</strong> +1-234-567-890<br>
                <strong>Email:</strong> <a href="mailto:info@example.com">info@example.com</a>
            </p>

            <div class="mt-3">
                <h6>Our Location</h6>
                <iframe class="w-100 border" height="200" frameborder="0" style="border:0"
                    src="https://www.google.com/maps/embed/v1/place?key=YOUR_API_KEY&q=123+Main+Street,Example+City" allowfullscreen>
                </iframe>
            </div>
        </div>
    </div>
</div>