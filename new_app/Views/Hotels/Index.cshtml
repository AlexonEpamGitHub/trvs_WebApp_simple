@model IEnumerable<Hotel>

<h2>Hotel List</h2>

<div class="search-bar">
    <input type="text" id="search" placeholder="Search hotel by name or location" />
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Rating</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Name</td>
                <td>@hotel.Location</td>
                <td>@hotel.Rating</td>
                <td>@hotel.Price.ToString("C")</td>
                <td>
                    <a href="/Hotels/Edit/@hotel.Id" class="btn btn-primary">Edit</a>
                    <a href="/Hotels/Details/@hotel.Id" class="btn btn-info">Details</a>
                    <a href="/Hotels/Delete/@hotel.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    <!-- Placeholder for pagination controls -->
</div>

<script>
    // Add basic search functionality with JavaScript
    document.getElementById('search').addEventListener('input', function (event) {
        let filter = event.target.value.toLowerCase();
        let rows = document.querySelectorAll('tbody tr');
        rows.forEach(row => {
            let hotelName = row.cells[0].textContent.toLowerCase();
            let hotelLocation = row.cells[1].textContent.toLowerCase();
            row.style.display = (hotelName.includes(filter) || hotelLocation.includes(filter)) ? '' : 'none';
        });
    });
</script>