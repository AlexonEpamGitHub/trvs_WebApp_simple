@model Hotel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Hotel</title>
    <link rel="stylesheet" href="/wwwroot/lib/bootstrap/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h4 class="text-danger">Delete Hotel</h4>
        <p>Are you sure you want to delete the hotel <strong>@Model.Name</strong>?</p>

        @using (Html.BeginForm("DeleteConfirmed", "Hotels", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/Hotels" class="btn btn-secondary">Cancel</a>
        }
    </div>
</body>
</html>